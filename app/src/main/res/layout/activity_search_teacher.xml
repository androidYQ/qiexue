<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true">


    <include
        android:id="@+id/ll_head"
        layout="@layout/activity_head" />
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/gray_bg_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/input_search_shape"
        android:layout_marginLeft="@dimen/margin_left_or_right_15"
        android:layout_marginRight="@dimen/margin_left_or_right_15"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginBottom="30dp">
        <ImageView
            android:id="@+id/img_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_default"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_toRightOf="@+id/img_search"
            android:layout_toLeftOf="@+id/img_cancel"
            android:layout_marginLeft="5dp"
            android:hint="输入手机号查找老师"
            android:inputType="phone"
            android:maxLength="11"
            android:imeOptions="actionSearch"
            android:textColorHint="@color/gray_light"
            android:textSize="@dimen/text_normal_size"/>
        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_cancelwords"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_noData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_normal_size"
        android:textColor="@color/color_999999"
        android:layout_gravity="center_horizontal"
        android:text="这个手机号没有匹配到任何老师"/>
    <RelativeLayout
        android:id="@+id/rl_result"
        android:layout_width="match_parent"
        android:layout_height="@dimen/person_list_height"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/pic_head_default" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/img_head"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal_size"
                android:textColor="@color/color_333333"
                android:text="成吉思汗"/>
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal_small_size"
                android:textColor="@color/color_999999"
                android:layout_marginTop="4dp"
                android:text="13554324534"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal_size"
                android:textColor="@color/color_999999"
                android:layout_marginRight="6dp"
                android:text="编辑职务"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mine_more"/>
        </LinearLayout>

        <Button
            android:id="@+id/bt_invite"
            android:layout_width="75dp"
            android:layout_height="27dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/login_button_shape"
            android:textSize="@dimen/text_normal_small_size"
            android:textColor="@color/white"
            android:text="邀请"/>

    </RelativeLayout>


</LinearLayout>