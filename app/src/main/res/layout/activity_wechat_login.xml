<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical"
    android:fitsSystemWindows="true">


    <include
        android:id="@+id/ll_head"
        layout="@layout/activity_head" />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/img_head"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/loginpage_logo90"
                />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal_size"
                android:textColor="@color/color_333333"
                android:layout_marginTop="8dp"
                android:text="小强"/>
        </LinearLayout>
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/login_associatewechat"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:layout_marginTop="16dp"/>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:gravity="center_horizontal">
           <ImageView
               android:layout_width="45dp"
               android:layout_height="45dp"
               android:src="@drawable/loginpage_logo90"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/text_normal_size"
               android:textColor="@color/color_333333"
               android:layout_marginTop="8dp"
               android:text="洽学"/>
       </LinearLayout>
   </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_normal_size"
        android:textColor="@color/color_999999"
        android:text="@string/login_wechat_tip"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="25dp"/>

    <RelativeLayout
        android:id="@+id/rl_edit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/login_button_left_or_right_distance"
        android:layout_marginRight="@dimen/login_button_left_or_right_distance"
        >

        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_cancelwords"/>
        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/img_cancel"
            android:background="@null"
            android:textSize="@dimen/text_normal_size"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/gray_light"
            android:hint="@string/info_login_phone_hint"
            android:inputType="phone"
            android:maxLength="11"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divide_line_color"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/tv_welcome"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/login_button_left_or_right_distance"
        android:layout_marginRight="@dimen/login_button_left_or_right_distance"
        >

        <ImageView
            android:id="@+id/img_cancel_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_getCode"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_cancelwords"/>
        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/img_cancel_code"
            android:background="@null"
            android:textSize="@dimen/text_normal_size"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/gray_light"
            android:hint="@string/login_verify_code_hint"
            android:inputType="number"
            android:maxLength="6"/>
        <TextView
            android:id="@+id/tv_getCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_normal_size"
            android:textColor="@color/gray_light"
            android:text="获取验证码"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divide_line_color"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
    <Button
        android:id="@+id/bt_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_button_height"
        android:background="@drawable/login_button_shape"
        android:layout_marginLeft="@dimen/login_button_left_or_right_distance"
        android:layout_marginRight="@dimen/login_button_left_or_right_distance"
        android:layout_marginTop="30dp"
        android:textSize="@dimen/text_normal_big_size"
        android:textColor="@color/white"
        android:text="绑定"/>

</LinearLayout>